<% if @flash.status == 200 %>
  $.growl.notice({message: '<%= @flash.message %>'});
  $('#user-link-<%= @user_link.id %>').remove();
<% else %>
  $.growl.error({message: '<%= @flash.message %>'});
<% end %>
<% if current_user.user_links.blank? %>
  $('.user-link-hidden-toggle').addClass('hidden');
<% else %>
  $('.user-link-hidden-toggle').removeClass('hidden');
<% end %>
