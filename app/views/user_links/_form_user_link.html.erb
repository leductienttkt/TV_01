<div class="modal fade" id="formUserLinkModal" role="dialog">
  <div class="modal-dialog">
    <%= form_for user_link, html: {class: "user-link-form"}, remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".title" %></h4>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= f.label :link, t(".link") %>
            <%= f.text_field :link, class: "form-control" %>
          </div>
        </div>
        <div class="button-portfolio-modal">
          <%= f.submit t(".save"), class: "button button-3d button-rounded button-green" %>
          <button type="button"
            class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "user_link" %>
