<div class="modal fade" id="award" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".award_header" %></h4>
      </div>
      <%= simple_form_for award, remote: true, html: {class: "award-form"} do |f| %>
        <div class="modal-body">
          <%= f.input :name, html5: true, label: t(".title"), class: "form-control" %>
          <%= f.input :time, as: :string, label: t(".made"),
            input_html: {class: "form-control datepicker"} %>
        </div>
        <div class="button-modal-award">
          <%= f.submit button_text, class: "button button-3d button-rounded button-green" %>
          <button type="button"
            class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "awards" %>
