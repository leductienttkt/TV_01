<% if @status == 200 %>
  $.growl.notice({message: '<%= @message %>'});
  $('.show-award').html('<%= j render "show_award", awards: current_user.awards %>');
<% else %>
  $.growl.error({message: '<%= @message %>'});
<% end %>
<% if current_user.awards.blank? %>
  $('.user-award-hidden-toggle').addClass('hidden');
<% else %>
  $('.user-award-hidden-toggle').removeClass('hidden');
<% end %>
