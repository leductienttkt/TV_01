<div class="row user-education-hidden-toggle
  <%= class_hidden user.user_educations %>">
  <div class="panel panel-default user-info-panel">
    <div class="user-education">
      <strong class="user-education-title">
        <%= t ".education" %>
      </strong>
      <% if user.is_user? current_user %>
        <div class="edit-profile-button">
          <div class="btn-group">
            <%= link_to new_user_education_path, remote: true,
              class: "btn btn-default btn-sm tip btn-responsive btn-add-user-education" do %>
              <span class="icon-plus-sign"></span>
              <%= t ".add" %>
            <% end %>
            <button type="button"
              class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
              data-toggle="dropdown" aria-expanded="true">
              <%= information_status user, "education" %></span> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:only_me],
                    info: "education", id: current_user.info_user.id} do %>
                  <span class="icon-lock"> <%= t ".only_me" %></span>
                <% end %>
              </li>
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:public],
                    info: "education", id: current_user.info_user.id} do %>
                  <span class="icon-globe"> <%= t ".public" %></span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <hr>
      <% end %>
      <div class="list-user-education">
        <%= render partial: "user_educations/user_education",
          collection: user.user_educations.includes(:school).sort_by_graduation %>
      </div>
    </div>
  </div>
</div>
