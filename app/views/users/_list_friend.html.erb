<% if list_friends.present? %>
  <div class="row">
    <% list_friends.each do |friend| %>
      <div class="col-md-6 list-friend">
        <div class="col-md-4">
          <%= link_to load_user_avatar(friend, class: "img-avatar-friend"), friend %>
        </div>
        <div class="col-md-4">
          <span class="name-friend"><%= link_to friend.name, friend %></span><br>
          <%= suggest_friend user, friend %>
        </div>
        <div class="col-md-4">
          <%= check_add_friend user, friend %>
        </div>
      </div>
      <%= render "modal_friend", friend: friend,
        friend_of_friends: friend.list_friends, user: user %>
    <% end %>
  </div>
<% else %>
  <p><%= t ".no_friend" %></p>
<% end %>
