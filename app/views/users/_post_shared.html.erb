<div class="row">
  <div class="col-md-4 col-xs-4">
    <%= image_tag post.image %>
  </div>
  <div class="col-md-8 col-xs-8">
    <div class="entry-title">
      <ul class="entry-meta clearfix">
        <li>
          <span><%= l post.created_at, format: :long %></span>
        </li>
        <li>
          <span><%= post.comments_count %> <%= t ".comments" %></span>
        </li>
        <% if user_signed_in? %>
          <li>
            <span>
              <% if shared_post? post %>
                <%= link_to t(".unshare"), "#", class: "unshare-post",
                  data: {id: post.id} %>
              <% else %>
                <%= link_to t(".share"), "#", class: "share-post",
                  data: {id: post.id} %>
              <% end %>
            </span>
          </li>
        <% end %>
      </ul>
      <h2 class="title-post">
        <%= link_to post.title, user_post_path(post) %>
      </h2>
      <div class="entry-content">
        <div class="clearfix"></div>
        <p>
          <%= raw post.content.truncate Settings.shared_post.content_max %>
        </p>
        <%= link_to t(".read_more"), user_post_path(post), class: "more-link" %>
      </div>
    </div>
  </div>
</div>
<hr>
