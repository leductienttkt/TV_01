<div class="row user-skill-hidden-toggle
  <%= class_hidden user.skill_users %>">
  <div class="panel panel-default user-info-panel">
    <div class="user-education">
      <span class="user-education-title">
        <%= t ".skills" %>
      </span>
      <% if user.is_user? current_user %>
        <div class="edit-profile-button">
          <div class="btn-group">
            <%= link_to new_skill_user_path, remote: true,
              class: "btn btn-default btn-sm tip btn-responsive" do %>
              <span class="icon-plus-sign"></span>
              <%= t ".add" %>
            <% end %>
            <button type="button"
              class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
              data-toggle="dropdown" aria-expanded="true">
              <%= information_status user, "skill" %></span> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:only_me],
                    info: "skill", id: current_user.info_user.id} do %>
                  <span class="icon-lock"> <%= t ".only_me" %></span>
                <% end %>
              </li>
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:public],
                    info: "skill", id: current_user.info_user.id} do %>
                  <span class="icon-globe"> <%= t ".public" %></span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <hr>
      <% end %>
      <div class="list-user-skill">
        <%= render partial: "skill_users/skill_user",
          collection: user.skill_users.includes(:skill) %>
      </div>
      <%= link_to "javascript:;", id: "showLess", class: "more-skill" do %>
        <span class="glyphicon glyphicon-chevron-up"></span></p>
      <% end %>
      <br>
      <%= link_to "javascript:;", id: "loadMore", class: "more-skill" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
      <% end %>
      <br>
    </div>
  </div>
</div>
