<div class="modal fade" id="formUserSkillModal" role="dialog">
  <div class="modal-dialog">
    <%= simple_form_for skill_user, remote: true, html: {id: "skill-users-form"} do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".title" %></h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :skill, t(".skill") %>
            <div class="dropdown form-group">
              <%= f.text_field :skill,
                class: "form-control dropdown-toggle",
                "data-toggle": "dropdown", "aria-hidden": :true,
                autocomplete: :off, id: "skill-search", value: skill_user.try(:skill_name) %>
              <ul class="dropdown-menu form-control dropdown-result-school">
                <div id="result-skill-search"></div>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <div class="slider">
              <%= f.text_field :level, type: "range", min: "0", max: "100", onchange: "rangevalue.value=value" %>
              <output id="rangevalue"><%= load_level skill_user %></output>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= button_tag type: :submit, class: "button button-3d button-rounded button-green" do %>
            <%= button_text %>
          <% end %>
          <button type="button"
            class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "skill_user_form" %>
