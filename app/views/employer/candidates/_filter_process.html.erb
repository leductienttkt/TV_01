<div class="btn-group btn-filter">
  <button type="button" class="btn btn-default dropdown-toggle button-show-filter"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-filter" aria-hidden="true"></i>
  </button>
  <div class="dropdown-menu filter" data-filter="process" data-model="candidate">
    <ul>
      <li>
        <button class="button-sort sortAlpha" data-sort-by="ASC">
          <%= t "employer.sortaz" %>
        </button>
      </li>
      <li>
        <button class="button-sort sortAlpha" data-sort-by="DESC">
          <%= t "employer.sortza" %>
        </button>
      </li>
      <hr />
      <li>
        <button data-toggle="collapse" data-target="#demo3"
          class="button-sort button-show-value">
          <%= t "employer.sortvalue" %>
        </button>
        <div id="demo3" class="collapse in value-sort">
          <div class="link">
            <a class="checkall"><%= t "employer.checkall" %></a>
            - <a  class="delete"><%= t "employer.delete" %></a>
          </div>
          <div id="imaginary_container">
            <div class="input-group stylish-input-group">
              <input type="text" class="form-control search-user-filter"
                placeholder="Search" >
              <span class="input-group-addon">
                <button type="submit">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </div>
          <div class="list-item-value">
            <% Candidate.processes.each do |key, type| %>
              <div class="checkbox">
                <input id="checkbox-process-<%= type %>" type="checkbox"
                  class="styled checkboxitem" data-list-id="<%= type %>" checked>
                <label for="checkbox-process-<%= type %>">
                  <%= Candidate.human_enum_name :process, key %>
                </label>
              </div>
            <% end %>
          </div>
        </div>
      </li>
      <li class="button-direct">
        <button type="button" class="btn btn-primary btn-ok">
          <%= t "employer.ok" %>
        </button>
        <button type="button" class="btn btn-default btn-cancel">
          <%= t "employer.cancel" %>
        </button>
      </li>
    </ul>
  </div>
</div>
