<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title title-image">
      <%= "#{job.title}" %><%= t ".have" %><%= " #{job.candidates.count} " %>
      <%= t ".candidates" %>
    </h3>
  </div>
  <div class="panel-body">
    <% job.candidates.each_with_index do |candidate, index| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= index + 1 %>
        </div>
        <div class="panel-body">
          <div class="row">
            <table class="table">
              <tbody>
                <tr>
                  <td><%= t ".email" %></td>
                  <td><%= link_to candidate.user_email, "#" %></td>
                </tr>
                <tr>
                  <td><%= t ".interested_in" %></td>
                  <td><%= candidate.interested_in %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
