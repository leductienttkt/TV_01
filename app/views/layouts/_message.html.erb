<script type="text/javascript">
  <% flash.each do |message_type, message| %>
    <% if is_notice_flash? message_type %>
      growl.notice({title: '<%= t ".success_title" %>',
        message: '<%= message %>'});
    <% elsif is_warning_flash? message_type %>
      growl.warning({title: '<%= t ".warning_title" %>',
        message: '<%= message %>'});
    <% else %>
      growl.error({title: '<%= t ".failed_title" %>',
        message: '<%= message %>'});
    <% end %>
  <% end %>
</script>
