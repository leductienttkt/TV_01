<div class="row user-project-hidden-toggle
  <%= class_hidden user.user_projects %>">
  <div class="panel panel-default user-info-panel">
    <div class="show-user-work">
      <strong class="user-work-title"><%= t ".user_project" %></strong>
      <% if user.is_user? current_user %>
        <div class="edit-profile-button">
          <div class="btn-group">
            <%= link_to new_user_project_path, remote: true,
              class: "btn btn-default btn-sm tip btn-responsive" do %>
              <span class="icon-plus-sign"></span>
              <%= t ".add" %>
            <% end %>
            <button type="button"
              class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
              data-toggle="dropdown" aria-expanded="true">
              <%= information_status user, "project" %></span> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:only_me],
                    info: "project", id: current_user.info_user.id} do %>
                  <span class="icon-lock"> <%= t ".only_me" %></span>
                <% end %>
              </li>
              <li>
                <%= link_to "javascript:;", class: "edit-info-status",
                  data: {status: InfoUser::INFO_STATUS[:public],
                    info: "project", id: current_user.info_user.id} do %>
                  <span class="icon-globe"> <%= t ".public" %></span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
      <hr>
    </div>
    <div class="user-project"><%= render "user_projects/user_project",
      user: user %></div>
  </div>
</div>
