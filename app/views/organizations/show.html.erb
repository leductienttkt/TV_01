<section id="content">
  <div class="container">
    <div class="col-md-12 col-sm-12">
      <div class="clearfix topmargin">
        <div class="col-md-3 col-sm-3 text-center">
          <%= image_tag Settings.user_works.org_avatar,
            class: "show-org-img" %></div>
        <div class="col-md-9 col-sm-9">
          <h3><strong><%= @org.name %></strong></h3>
          <%= t ".org_infor" %>
          <li class="divider"></li>
        </div>
      </div>
    </div>
    <div class="col-md-12 col-sm-12">
      <div class="col-md-8 col-sm-8">
        <div class="panel panel-default">
          <div class="row">
            <div class="org-worked-member">
              <strong><%= t ".people_worked_here" %></strong>
            </div>
            <div>
              <%= render "org_member", members: @org.users.includes(:avatar) %>
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="row">
            <div class="org-worked-member">
              <strong><%= t ".people_worked" %></strong>
            </div>
            <div>
              <%= render "related_orgs", related_orgs: @related_orgs %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-4">
        <div class="panel panel-default">
          <div class="org-worked-member">
            <strong><%= t ".new_job" %></strong>
          </div>
          <%= render "new_jobs", new_jobs: @new_jobs %>
        </div>
      </div>
    </div>
  </div>
</section>
