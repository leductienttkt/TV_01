<div id="edit-quote-modal" class="modal fade course-member" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content modal-content-info-user">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".edit_quote" %></h4>
      </div>
      <%= simple_form_for info_user, remote: :true,
        html: {id: "edit-quote-form", class: "mb-0-form"} do |f| %>
        <div class="modal-body">
          <%= f.input :quote, as: :text, placeholder: t(".quote_placeholder"),
            class: "sm-form-control modal-txta",
            rows: Settings.info_users.quote_form_rows %>
        </div>
        <div class="button-portfolio-modal">
          <%= f.submit t(".update_button"), class: "button button-3d button-rounded button-green" %>
          <button type="button"
            class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
            <%= t ".cancel_button" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
