<div class="row">
  <div class="panel panel-default user-info-panel">
    <div class="edit-profile-title">
      <strong><%= t ".introduction" %></strong>
    </div>
    <% if user.is_user? current_user %>
      <div class="edit-profile-button">
        <div class="btn-group">
          <%= link_to "javascript:;",
            class: "btn btn-default btn-sm tip btn-responsive",
            data: {toggle: "modal", target: "#edit-introduction-modal"} do %>
            <span class="icon-pencil2"></span>
            <%= t ".edit" %>
          <% end %>
          <%= render "info_users/edit_introduction_modal", info_user: info_user %>
          <button type="button"
            class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
            data-toggle="dropdown" aria-expanded="true">
            <%= information_status user, "introduction" %></span> <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to "javascript:;", class: "edit-info-status",
                data: {status: InfoUser::INFO_STATUS[:only_me],
                  info: "introduction", id: current_user.info_user.id} do %>
                <span class="icon-lock"> <%= t ".only_me" %></span>
              <% end %>
            </li>
            <li>
              <%= link_to "javascript:;", class: "edit-info-status",
                data: {status: InfoUser::INFO_STATUS[:public],
                  info: "introduction", id: current_user.info_user.id} do %>
                <span class="icon-globe"> <%= t ".public" %></span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
    <br>
    <div class="info-user-height">
      <%= render "info_users/introduction_content", info_user: info_user %>
    </div>
  </div>
</div>
