<div class="row">
  <div class="panel panel-default user-info-panel">
    <div class="edit-profile-title">
      <strong><%= t ".quote" %></strong>
    </div>
    <% if user.is_user? current_user %>
      <div class="edit-profile-button">
        <div class="btn-group">
          <button id="edit-quote"
            class="btn btn-default btn-sm tip btn-responsive"
            data-toggle="modal" data-target="#edit-quote-modal">
            <span class="icon-pencil2"></span>
            <%= t ".edit" %>
          </button>
            <%= render "info_users/edit_quote_modal", info_user: info_user %>
          <button type="button"
            class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
            data-toggle="dropdown" aria-expanded="true">
            <span class="icon-users"></span><span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to "#" do %>
                <span class="icon-user"> <%= t ".friends" %></span>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <span class="icon-users"> <%= t ".friends_of_friends" %></span>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <span class="icon-globe"> <%= t ".public" %></span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
    <br>
    <div class="info-user-height">
      <%= render "info_users/quote_content", info_user: info_user %>
    </div>
  </div>
</div>
