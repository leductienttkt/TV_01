<% if @status == 200 %>
  $.growl.notice({message: '<%= @message %>'});
  $('.show-portfolio').html('<%= j render "show_portfolio", portfolios: current_user.user_portfolios %>');
<% else %>
  $.growl.error({message: '<%= @message %>'});
<% end %>
<% if current_user.user_portfolios.blank? %>
  $('.user-portfolio-hidden-toggle').addClass('hidden');
<% else %>
  $('.user-portfolio-hidden-toggle').removeClass('hidden');
<% end %>
