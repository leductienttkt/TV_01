<div class="modal fade" id="portfolio" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".portfolio_header" %></h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for portfolio, remote: true, html: {class: "portfolio-form"} do |f| %>
          <%= f.input :title, label: t(".title"), class: "form-control" %>
          <%= f.input :url, label: t("users.form_portfolio.url"), class: "form-control" %>
          <%= f.input :description, as: :text, label: t(".description"),
            input_html: {rows: Settings.user_portfolio.textarea_rows, class: "form-control"} %>
          <%= f.input :time, as: :string, label: t(".made"),
            input_html: {class: "form-control datepicker"} %>
          <div class="button-portfolio-modal">
            <%= f.submit button_text, class: "button button-3d button-rounded button-green" %>
            <button type="button"
              class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
              <%= t ".close" %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "user_portfolios" %>
