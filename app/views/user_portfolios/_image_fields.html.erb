<div class="nested-fields projects-image-form">
  <article class="portfolio-item pf-media pf-icons">
    <div class="portfolio-image">
      <% if f.object.picture.present? %>
        <%= image_tag f.object.picture %>
      <% else %>
        <%= image_tag "portfolio" %>
      <% end %>
      <div class="portfolio-overlay images-container">
        <%= f.label :picture do %>
          <a class="left-icon">
            <i class="icon-line-plus"></i>
          </a>
        <% end %>
        <%= f.file_field :picture, class: "input-file" %>
        <%= f.hidden_field :picture_cache, value: f.object.picture_cache %>
        <%= link_to_remove_association f, class: "right-icon" do %>
          <i class="icon-remove"></i>
        <% end %>
      </div>
    </div>
  </article>
</div>
