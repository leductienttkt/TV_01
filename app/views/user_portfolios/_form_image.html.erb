<div class="modal fade" id="portfolio-image" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".portfolio_header_image" %></h4>
      </div>
      <div class="modal-body">
        <h4><%= t ".portfolio_notification_image" %></h4>
        <%= simple_form_for portfolio, html: {class: "portfolio-form"} do |f| %>
          <div>
            <%= f.simple_fields_for :images do |image| %>
              <%= render "image_fields", f: image %>
            <% end %>
          </div>
          <div class="new-added-images">
          </div>
          <div class="links links-form-project">
            <%= link_to_add_association f, :images,
              class: "button button-3d button-small button-rounded button-green button-light button-white-text",
              data: {"association-insertion-node": ".new-added-images"} do %>
              <i class="icon-upload"></i>
              <%= t ".add_image" %>
            <% end %>
          </div>
          <div class="button-portfolio-modal">
            <%= f.submit button_text, class: "button button-3d button-rounded button-green" %>
            <button type="button"
              class="button button-3d button-rounded button-white button-light" data-dismiss="modal">
              <%= t ".close" %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "user_portfolios" %>
