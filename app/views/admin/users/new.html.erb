<div>
  <div class="page-title">
    <div class="title_left">
      <h3><%= t ".employer_registration" %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <%= form_for [:admin, @user] do |f| %>
            <div class="col-md-6 form-group">
              <%= f.label :name %>
              <span class="label-danger box-danger"><%= t ".required" %></span>
              <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label :email %>
              <span class="label-danger box-danger"><%= t ".required" %></span>
              <%= f.text_field :email, class: "form-control", autocomplete: "off" %>
            </div>

            <div class="col-md-6 form-group">
              <%= f.label :phone %>
              <span class="label-primary box-danger"><%= t ".optional" %></span>
              <%= f.text_field :phone, class: "form-control", autocomplete: "off" %>
            </div>

            <div class="col-md-12">
              <%= f.submit t(".next"), class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
