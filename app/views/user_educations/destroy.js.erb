<% if @flash.status == 200 %>
  $.growl.notice({message: '<%= @flash.message %>'});
  $('.list-user-education').html(`<%= j render partial: "user_educations/user_education",
    collection: current_user.user_educations.includes(:school).sort_by_graduation %>`);
<% else %>
  $.growl.error({message: '<%= @flash.message %>'});
<% end %>
$('#formUserEducationModal').modal('hide');
<% if current_user.user_educations.blank? %>
  $('.user-education-hidden-toggle').addClass('hidden');
<% else %>
  $('.user-education-hidden-toggle').removeClass('hidden');
<% end %>
