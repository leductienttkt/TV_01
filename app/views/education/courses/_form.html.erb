<%= form_for course, html: {class: "form-horizontal form-course-new"} do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label t(".name"), class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :name, class: "form-control input-md",
          placeholder: true, required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(".detail"), class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :detail, class: "form-control input-md",
          placeholder: true, required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(".training"), class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.select :training_id,
          options_for_select(training_select, f.object.training_id), {},
          {class: "form-control selectpicker", "data-live-search": true} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(".start_date"), class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.date_field :start_date, class: "form-control",
          placeholder: t(".start_date"), required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(".end_date"), class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.date_field :end_date, class: "form-control",
          placeholder: t(".end_date"), required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(".image"), class: "col-md-4 control-label"%>
      <div class="col-md-4">
        <table class="user-photo-form">
          <%= f.fields_for :images do |image| %>
            <%= render "image_fields", f: image %>
          <% end %>
          <%= link_to_add_association t(".add_image"),
            f, :images, class: "btn btn-default" %>
        </table>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="save"></label>
      <div class="col-md-8">
        <%= f.submit t(".save"), class: "btn btn-primary" %>
        <%= button_tag t(".reset"),  
          type: :reset, class: "btn btn-inverse"%>
      </div>
    </div>
  </fieldset>
<% end %>
