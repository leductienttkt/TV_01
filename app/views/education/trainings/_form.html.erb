<div class="container">
  <div class="content-wrap">
    <div class="row">
      <div class="col-xs-8 col-md-8 col-md-offset-2">
        <%= simple_form_for training do |f| %>
          <%= f.input :name, label: t(".name"), class: "form-control" %>
          <%= f.input :description, label: t(".description"),
            class: "form-control" %>
          <%= f.submit button_text, class: "btn btn-md btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
