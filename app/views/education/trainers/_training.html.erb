<article class="portfolio-item pf-media pf-icons" id="training-<%= training.id %>" >
  <div class="portfolio-image">
    <a href="portfolio-single.html">
      <%= load_image training %>
    </a>
    <div class="portfolio-overlay">
      <%= link_to education_training_path(training), class: "left-icon" do %>
        <i class="icon-eye i-alt"></i>
      <% end %>
      <a href="#", class="right-icon">
        <i class="icon-trash delete-training" data-id="<%= training.id %>"></i>
      </a>
    </div>
  </div>
  <div class="portfolio-desc">
    <h3><%= link_to training.name, education_training_path(training) %></h3>
    <span><%= truncate training.description, length: 20 %></span>
  </div>
</article>
