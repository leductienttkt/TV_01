<% posts.each do |post| %>
  <div class="col-xs-12 bottommargin-sm">
    <div class="ipost clearfix">
      <div class="row clearfix">
        <div class="col-sm-4">
          <div class="entry-image">
            <%= image_tag "images/magazine/thumb/1.jpg" %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="entry-title">
            <h3><%= post.title %></h3>
          </div>
          <ul class="entry-meta clearfix">
            <li>
              <i class="icon-calendar3"></i>
              <%= l post.created_at, format: :date_month_year_concise %>
            </li>
            <li>
              <i class="icon-comments"></i>
              <%= post.comments_count %>
            </li>
          </ul>
          <div class="entry-content">
            <p>
              <%= truncate post.content,
                length: Settings.education.posts.content_character_display %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
